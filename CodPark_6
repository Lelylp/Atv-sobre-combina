cabe_apenas_uma_pessoa:caracter
pesado:caracter
tem_pedal:caracter

inicio

escreva("É terrestre?")
leia(terrestre)
escreva("Cabe apenas uma pessoa?")
leia(cabe_apenas_uma_pessoa)
escreva("É pesado?")
leia(pesado)
escreva("Tem pedal?")
leia(tem_pedal)

se(terrestre == "Não" or cabe_apenas_uma_pessoa == "Não") entao

	escreva("Nenhum veiculo compativel com a descriçao")

senao
se(pesado == "Sim")

	escreva("Então, o transporte escolhido foi o trator.")

senao
se(tem_pedal == "Sim")

	escreva("Então, o transporte escolhido foi a bicicleta.")
senao
	escreva("Então, o transporte escolhido foi a moto.")
